.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.dro-display {
    border: 1px solid #ccc;
    text-align: right;
    padding: 5px 10px;
    height: 32px;
    font-size: 18px;
    font-weight: bold;
    margin-right: 5px;
}

.dro-btn-group {
    margin-left: 5px;
}

.panel {
    margin-bottom: 10px;

    &:last-child {
        margin-bottom: 0;
    }
}

.panel-heading:hover {
    background-color: rgba(0, 0, 0, 0.05);
}

.text-ellipsis {
    white-space: nowrap;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
}

.well {
    min-height: 22px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 3px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
    margin-bottom: 0;
    padding: 0 5px;
}

.gcode-stats {
    table[data-table="dimension"] {
        width: 100%;

        thead > tr > th.axis,
        tbody > tr > td.axis {
            width: 1%;
            white-space: nowrap;
        }
        tbody > tr > td {
            text-align: right;
            &.axis {
                text-align: center;
            }
        }
    }
}
